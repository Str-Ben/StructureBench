root ::= graph

# A minimal Penman graph: (var / concept [:role child]*)
graph ::= node

node ::= "(" var "/" concept role_block* ")"
role_block ::= ":" role_name child
child ::= node | literal | var | concept

# Terminals (EBNF char classes)
var ::= [a-z] [0-9]?
concept ::= [A-Za-z0-9_\-]+
role_name ::= [A-Za-z0-9_\-]+
literal ::= string | number | "-"
string ::= "\"" [A-Za-z0-9_ \-]+ "\""
number ::= [0-9]+

